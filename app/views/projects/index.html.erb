<h1>Listing projects</h1>
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <div class="table-responsive">
<table class="data table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Active</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Disable</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><a href="<%= project_path(project) %>"><%= project.name %></a></td>
        <td><%= nice_date_form(project.startDate) %></td>
        <td><%= nice_date_form(project.endDate) %></td>
        <td><%= project.active ? 'Yes' : 'No' %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <% if project.active? %>
        <td><%= link_to 'Disable', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <td><%= link_to 'Enable', project_enable_path(project), data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
