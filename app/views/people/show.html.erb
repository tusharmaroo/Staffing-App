<div class="row">
        <div class="col-md-2">
        <%= render 'groups/sidebar' %>
        </div>
        <div class="col-md-5">
          <p id="notice"><%= notice %></p>
          <%#= render 'groups/sidebar' %>
          <p>
            <strong>Name:</strong>
            <%= @person.name %>
          </p>

          <p>
            <strong>Skills:</strong>
            <%= @person.skills %>
          </p>

          <p>
            <strong>Totalexp:</strong>
            <%= @person.totalExp %>
          </p>

          <p>
            <strong>Tcsexp:</strong>
            <%= @person.tcsExp %>
          </p>

          <p>
            <strong>Releventexp:</strong>
            <%= @person.relExp %>
          </p>

          <p>
            <strong>Allocation:</strong>
            <%= @person.allocation %>
          </p>

          <p>
            <strong>Location:</strong>
            <%= @person.location %>
          </p>
          <p>
            <strong>Mobile Number :</strong>
            <%= @person.mobilenumber %>
          </p>
          <p>
            <strong>Email ID:</strong>
            <%= @person.emailid %>
          </p>

          <p>
            <strong>Interestareas:</strong>
            <%= @person.interestAreas %>
          </p>

          <p>
            <strong>Active:</strong>
            <%= @person.active %>
          </p>

          <p>
            <strong>Group:</strong>
            <%= Group.find(@person.group_id).name %>
          </p>
          <hr>
          
          <% if current_user.Admin && @person.allocation < 100 %> 
          <a href="#" class="btn btn-lg btn-success" data-toggle="modal" data-target="#newAssignmentModal">Assign a Project</a> | <% end %>
          <% if current_user.Admin %>
          <%= link_to 'Edit', edit_person_path(@person) %> |
          <% if @person.active? %>
          <%= link_to 'Deactivate', @person, method: :delete, data: { confirm: 'Are you sure?' } %> | 
          <% else %>
          <%= link_to 'Activate', person_enable_path(@person), data: { confirm: 'Are you sure?' } %> |
          <% end %>
          <%= link_to 'Back', people_path %>
          <% end %>


          <div class="modal fade" id="newAssignmentModal" tabindex="-1" role="dialog" aria-labelledby="newAssignmentModal" aria-hidden="true">
              <div class="modal-dialog">
                  <div class="modal-content">
                      <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                      <h4 class="modal-title" id="myModalLabel">New Assignment</h4>
                      </div>
                      <div class="modal-body">
                        <%= form_for(@assignment) do |f| %>
                          <% if @assignment.errors.any? %>
                            <div id="error_explanation">
                              <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

                              <ul>
                              <% @assignment.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                              <% end %>
                              </ul>
                            </div>
                          <% end %>
                          <div class="field">
                            <%= f.label :person_id %> : 
                            <input type="hidden" name="assignment[person_id]" value="<%= @person.id %>">
                            <%= f.label @person.name %><br>
                          </div>
                          <input type="hidden" name="assignment[group_id]" value="<%= @person.group_id %>">
                          <div class="field">
                            <%= f.label :project_id %><br>
                            <%#= f.text_field :group_id %>
                            <select id="assignment_project_id" name="assignment[project_id]">
                              <% @projects.each do |project| %>
                              <% if project.group_id == @person.group_id %>
                                <option value="<%= project.id %>">
                                  <%= project.name %>
                                </option>
                                <% end %>
                              <% end %>
                            </select>
                          </div>
                          <%#= "<div class="field">
                            <div class="ui-widget">
                              <label for="tags">Project: </label>
                              <input id="tags" name="assignment[project_id]">
                              <div id="container_tags">
                              </div>
                            </div>
                          </div>" %>
                          <div class="field">
                            <%= f.label :billable %><br>
                            <%= f.check_box :billable %>
                          </div>
                          
                        <div class="field">
                            <%= f.label :startdate %><br>
                            <%= f.text_field :startdate, :class => 'input-xlarge datepicker',:readonly => 'true' %>
                        </div>
                        <div class="field">
                            <%= f.label :enddate %><br>
                            <%= f.text_field :enddate, :class => 'input-xlarge datepicker',:readonly => 'true' %>
                        </div>
                        <div class="field">
                            <%= f.label :allocation %><br>
                            <%= f.number_field :allocation, :class => 'input-xlarge',:min => '0',:max => '100' %>
                        </div>
                        <div class="actions">
                            <%= f.submit %>
                        </div>
                        <% end %>
                        </div>

                      <div class="modal-footer"></div>
                    </div>
                  </div>          
                </div>
              </div>
        <div class="col-md-5 scrollable" id="ttt">
        
          <h4>Active Tasks:</h4>
          <% @assignments.each do |temp| %>
          <% if (temp.active) && (temp.enddate - Time.now) > 0 %>
          ID : <%= temp.id %><br>
          Billable: <%= temp.billable %><br>
          Allcoation: <%= temp.allocation %>%<br>
          Brief of Work: Lorem Ipsum Lorem Ipsum Lorem Ipsum <br>
          Assignment Duration: <%= distance_of_time_in_words(temp.enddate,temp.startdate).capitalize %><br><hr>
          <% end %>
          <% end %>

          <h4>History:</h4>
          <% @assignments.each do |temp| %>
          <% if (!temp.active) || (temp.enddate - Time.now) < 0 %>
          ID : <%= temp.id %><br>
          Billable: <%= temp.billable %><br>
          Allcoation: <%= temp.allocation %>%<br>
          Brief of Work: Lorem Ipsum Lorem Ipsum Lorem Ipsum <br>
          Assignment Duration: <%= distance_of_time_in_words(temp.enddate,temp.startdate).capitalize %><br><hr>
          <% end %>
          <% end %>
        </div>
</div>

<script>
  $(function() {
    <% hashProject = "[" %>
    <% @projects.each do |project| %>
    <% if project.group_id == @person.group_id %>
    <% hashProject << "{ label: '" + project.name + "', value: '" + project.name.to_s + "' }," %>
    <% end %>
    <% end %>
    <% hashProject.slice!(-1) %>
    <% hashProject << "]" %>
    $( "#tags" ).autocomplete({ source: <%= raw hashProject %>,
      messages: {
        noResults: '',
        results: function() {}
      }

     });
  });
  </script>